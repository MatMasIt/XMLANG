   <Rectangle>
      <declarations>
         <private float="w" description="Width" />
         <private float="h" description="Height" default="1" />
         <!-- Just because -->
      </declarations>
      <constructor args="FLOAT w;FLOAT h">
         <set var="this.w"><w /></set>
         <set var="this.h"><h /></set>
      </constructor>
      <public function="perimeter" returns="FLOAT">
         <return>2*(<this.w />+<this.h />)
         </return>
      </public>
      <public function="area" returns="FLOAT">
        <return><this.w />*<this.h /></return>
      </public>
      <public function="getW" returns="FLOAT" description="Get width">
         <return><this.w /></return>
      </public>
      <public function="getH" returns="FLOAT" description="Get height">
          <return><this.h /></return>
      </public>
      <public function name="setW" args="FLOAT w" returns="VOID" description="Set width">
         <set var="this.w"><w /></set>
      </public>
      <public function name="setH" args="FLOAT w" returns="VOID" description="Set height">
         <set var="this.h"><h /></set>
      </public>
   </Rectangle>
</XMLANG>
