<XMLANG version="1.0" type="class" namespace="Shapes">
   <meta>
      <uid>892kxwbduamcpad</uid>
      <name>Square</name>
      <description>A simpls rectangle class</description>
      <comment>What a cool class</comment>
      <codename>Quadris</codename>
      <version>1.0</version>
      <date>2021-09-08</date>
      <by>
         <commonName>The XMLANG group</commonName>
         <authors>
            <author>
               <name>Matt</name>
               <github>MatMasIt</github>
               <telegram>matmasak</telegram>
               <email>example@email.com</email>
            </author>
         </authors>
      </by>
   </meta>
   <Square extends="Rectangle">
      <declarations>
         <l>
            <description>The side</description>
            <type>
               <types.FLOAT />
            </type>
            <access>
               <accesses.PRIVATE />
            </access>
         </l>
      </declarations>
      <constructor>
         <arguments>
            <l>
               <description>The side</description>
               <type>
                  <types.FLOAT />
               </type>
            </l>
         </arguments>
         <code>
            <super.constructor>
               <w>
                  <l />
               </w>
               <h>
                  <l />
               </h>
            </super.constructor>
         </code>
      </constructor>
      <!-- Perimeter and area methods are hereditated -->
      <function name="getW">
         <access>
            <accesses.NO />
         </access>
      </function>
      <function name="getH">
         <access>
            <accesses.NO />
         </access>
      </function>
      <function name="setW">
         <access>
            <accesses.NO />
         </access>
      </function>
      <function name="setH">
         <access>
            <accesses.NO />
         </access>
      </function>
      <!-- Disable direct access for methods -->
      <function name="getL">
         <description>Get side</description>
         <returns>
            <types.FLOAT />
         </returns>
         <access>
            <accesses.PUBLIC />
         </access>
         <return>
            <super.getW />
         </return>
      </function>
      <function name="setL">
         <description>Set width</description>
         <returns>
            <types.VOID />
         </returns>
         <arguments>
            <l>
               <description>The side</description>
               <type>
                  <types.FLOAT />
               </type>
            </l>
         </arguments>
         <access>
            <accesses.PUBLIC />
         </access>
         <super.setW>
            <l />
         </super.setW>
         <super.setH>
            <l />
         </super.setH>
      </function>
   </Square>
</XMLANG>
